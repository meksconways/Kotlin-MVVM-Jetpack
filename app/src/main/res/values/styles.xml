<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>


    <style name="ButtonSchema" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
    <item name="fontFamily">@font/dosis_semibold</item>
        <item name="android:background">@drawable/bottom_corner</item>
    </style>


</resources>
