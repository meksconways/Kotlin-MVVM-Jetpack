<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/scrollView"
            tools:context=".newsdetail.NewsDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/lyt_0"
                    android:id="@+id/lyt_lnr"
                    android:padding="16dp"
            >

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arkadaşlarını hastaneye yetiştirmek isterken köprüden uçtular: 4 yaralı"
                        android:fontFamily="@font/dosis_bold"
                        android:textSize="22sp"
                        android:textColor="#212121"
                        android:id="@+id/txt_title"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#109d58"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:id="@+id/txt_path"
                            android:text="SPOR"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            android:fontFamily="@font/dosis_semibold"

                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 Ağustos 2018 21:42"
                            android:textSize="16sp"
                            android:fontFamily="@font/dosis_semibold"
                            android:textColor="#797979"
                            android:id="@+id/txt_time"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="16dp"
                    />


                </LinearLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/lyt_lnr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/lyt_0"
            >

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="H,16:10"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/img_news"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lyt_0"
                    android:layout_marginBottom="8dp"
            >


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kastamonu’da üç arkadaş, rahatsızlanan arkadaşını hastaneye götürmek isterken köprüden çaya uçtu. Kazada araçta bulunan 4 kişi yaralandı."
                        android:fontFamily="@font/dosis_bold"
                        android:textColor="#212121"
                        android:id="@+id/txt_desc"
                        android:textSize="18sp"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kastamonu’da üç arkadaş, rahatsızlanan arkadaşını hastaneye götürmek isterken köprüden çaya uçtu. Kazada araçta bulunan 4 kişi yaralandı."
                        android:fontFamily="@font/dosis_semibold"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:id="@+id/txt_newstext"
                        android:layout_marginTop="8dp"
                />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progressBar"

    />

</FrameLayout>
